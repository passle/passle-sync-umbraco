@using PassleSync.Website.ViewModels;
@inherits Umbraco.Web.Mvc.UmbracoViewPage<PaginationViewModel>

<div class="flex justify-center">
    @if (Model.CurrentPage > 1)
    {
        <a class="prev page-numbers" href="/insights?page=@(Model.CurrentPage - 1)">« Previous</a>
    }

    @for (var i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.CurrentPage)
        {
            <span aria-current="page" class="page-numbers current">@i</span>
        }
        else
        {
            <a class="page-numbers" href="/insights?page=@i">@i</a>
        }
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a class="next page-numbers" href="/insights?page=@(Model.CurrentPage + 1)">Next »</a>
    }
</div>
