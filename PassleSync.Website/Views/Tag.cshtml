@using Umbraco.Core;
@using PassleSync.Website.ViewModels;
@using PassleSync.Core.Extensions;
@inherits Umbraco.Web.Mvc.UmbracoViewPage<TagViewModel>
@{
    Layout = "Layout.cshtml";
}

<div class="flex flex-col gap-8 max-w-6xl mx-auto">
    <div class="section">

        <h2 class="section__heading">Posts tagged with "@Model.Tag"</h2>
        <div class="section__decoration">@Model.Tag</div>

        <div class="grid grid-cols-2 gap-6">
            @foreach (var post in Model.Posts)
            {
                @Html.Partial("PasslePost", post);
            }
        </div>
    </div>
</div>